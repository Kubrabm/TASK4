@using OganiWebsite.ViewModels;
@{
    HomeViewModel viewModel = Model;
    var category = viewModel.Categories;
    var product = viewModel.Products;
    var banner = viewModel.Banners;
    var alldepartment = viewModel.AllDepartments;
    var herosearch = viewModel.HeroSearches;
    var topproduct = viewModel.TopProducts;
    var blog = viewModel.Blogs;
    var blogstittle = viewModel.BlogsTittle;
    var ffproduct = viewModel.FFFProducts;
}

<!-- Hero Section Begin -->
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>All departments</span>
                    </div>
                    <ul>
                        @foreach (var item in alldepartment)
                        {
                            <li><a href="#"> @item.Name</a></li>
                        }

                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                @foreach (var item in herosearch)
                {
                    <div class="hero__search">
                        <div class="hero__search__form">
                            <form action="#">
                                <div class="hero__search__categories">
                                    @item.Title
                                    <span class="arrow_carrot-down"></span>
                                </div>
                                <input type="text" placeholder="What do yo u need?">
                                <button type="submit" class="site-btn">SEARCH</button>
                            </form>
                        </div>
                        <div class="hero__search__phone">
                            <div class="hero__search__phone__icon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <div class="hero__search__phone__text">
                                <h5>+@item.PhoneNumber</h5>
                                <span>@item.Description</span>
                            </div>
                        </div>
                    </div>
                    <div class="hero__item set-bg" data-setbg="/@item.imgUrl">
                        <div class="hero__text">
                            <span>@item.ImgTitle</span>
                            <h2>@item.ImgTitle1 <br />@item.ImgTitle2</h2>
                            <p>@item.ImgDescription</p>
                            <a href="#" class="primary-btn">@item.BtnText</a>
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                @foreach(var item in category)
                {
                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="@item.ImageUrl">
                            <h5><a href="#">@item.Name</a></h5>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</section>
<!-- Categories Section End -->
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        @foreach (var item in ffproduct)
                        {
                            <li data-filter=".@item.Controlname.ToLower()">@item.Controlname</li>
                        }

                    </ul>

                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach(var item in product)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="@item.ImageUrl">
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="#">@item.Name</a></h6>
                            <h5>$@item.Price</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Featured Section End -->
<!-- Banner Begin -->
<div class="banner">
    <div class="container">
        <div class="row">
            @foreach (var item in banner)
            {
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="banner__pic">
                        <img src="~/@item.ImageUrl" alt="">
                    </div>
                </div>
            }

        </div>
    </div>
</div>
<!-- Banner End -->
<!-- Latest Product Section Begin -->
<section class="latest-product spad">
    <div class="container">
        <div class="row">
            @foreach(var item in topproduct)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="latest-product__text">
                        <h4>@item.Name</h4>
                        <div class="latest-product__slider owl-carousel">
                            <div class="latest-prdouct__slider__item">
                                <a href="#" class="latest-product__item">
                                    <div class="latest-product__item__pic">
                                        <img src="~/@item.ImgUrl1" alt="">
                                    </div>
                                    <div class="latest-product__item__text">
                                        <h6>@item.Description1</h6>
                                        <span>$@item.Price1</span>
                                    </div>
                                </a>
                                <a href="#" class="latest-product__item">
                                    <div class="latest-product__item__pic">
                                        <img src="~/@item.ImgUrl2" alt="">
                                    </div>
                                    <div class="latest-product__item__text">
                                        <h6>@item.Description2</h6>
                                        <span>@item.Price2</span>
                                    </div>
                                </a>
                                <a href="#" class="latest-product__item">
                                    <div class="latest-product__item__pic">
                                        <img src="~/@item.ImgUrl3" alt="">
                                    </div>
                                    <div class="latest-product__item__text">
                                        <h6>@item.Description3</h6>
                                        <span>@item.Price3</span>
                                    </div>
                                </a>
                            
                            </div>
                            <div class="latest-prdouct__slider__item">
                                <a href="#" class="latest-product__item">
                                    <div class="latest-product__item__pic">
                                        <img src="~/@item.ImgUrl1" alt="">
                                    </div>
                                    <div class="latest-product__item__text">
                                        <h6>@item.Description1</h6>
                                        <span>@item.Price1</span>
                                    </div>
                                </a>
                                <a href="#" class="latest-product__item">
                                    <div class="latest-product__item__pic">
                                        <img src="~/@item.ImgUrl2" alt="">
                                    </div>
                                    <div class="latest-product__item__text">
                                        <h6>@item.Description2</h6>
                                        <span>@item.Price2</span>
                                    </div>
                                </a>
                                <a href="#" class="latest-product__item">
                                    <div class="latest-product__item__pic">
                                        <img src="~/@item.ImgUrl3" alt="">
                                    </div>
                                    <div class="latest-product__item__text">
                                        <h6>@item.Description3</h6>
                                        <span>@item.Price3</span>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                
            }


        </div>
    </div>
</section>
<!-- Latest Product Section End -->
<!-- Blog Section Begin -->
<section class="from-blog spad">
    <div class="container">
        @foreach (var item in blogstittle)
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title from-blog__title">
                        <h2>@item.Title</h2>
                    </div>
                </div>
            </div>
            
        }
        <div class="row">

            @foreach (var item in blog)
            {
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="blog__item">

                        <div class="blog__item__pic">
                            <img src="~/@item.ImgUrl" alt="">
                        </div>
                        <div class="blog__item__text">
                            <ul>
                                <li><i class="fa fa-calendar-o"></i>@item.Date</li>
                                <li><i class="fa fa-comment-o"></i> @item.Comment</li>
                            </ul>
                            <h5><a href="#">@item.Name</a></h5>
                            <p>@item.Description </p>
                        </div>
                    </div>
                </div>
                
            }
        </div>

    </div>
</section>
<!-- Blog Section End -->